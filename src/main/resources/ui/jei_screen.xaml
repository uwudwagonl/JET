<!-- 
HytaleJEI Main Screen
=====================
XAML template for NoesisGUI (Hytale's UI framework)

NOTE: This is a placeholder. Actual implementation depends on 
how Hytale exposes NoesisGUI to plugins.
-->

<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="400" Height="340">
    
    <Border Background="#DD222222" CornerRadius="8" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="Item Encyclopedia" 
                           FontSize="18" FontWeight="Bold"
                           Foreground="#FFCC66"
                           HorizontalAlignment="Center"/>
                <Button Content="âœ•" 
                        HorizontalAlignment="Right"
                        Width="28" Height="28"
                        Background="#444" Foreground="White"
                        Command="{Binding CloseCommand}"/>
            </Grid>
            
            <!-- Search Bar -->
            <Border Grid.Row="1" Background="#333" CornerRadius="4" 
                    Padding="8,6" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ” " 
                               VerticalAlignment="Center" Foreground="#888"/>
                    
                    <TextBox Grid.Column="1"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="14"
                             VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2" Content="âœ•" 
                            Width="20" Height="20"
                            Visibility="{Binding HasSearchText}"
                            Command="{Binding ClearSearchCommand}"/>
                </Grid>
            </Border>
            
            <!-- Category Tabs -->
            <ScrollViewer Grid.Row="2" 
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal">
                    <Button Content="All" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter=""/>
                    <Button Content="Blocks" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="blocks"/>
                    <Button Content="Tools" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="tools"/>
                    <Button Content="Weapons" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="weapons"/>
                    <Button Content="Food" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="food"/>
                    <Button Content="Materials" Margin="2" Padding="10,4"
                            Command="{Binding SelectCategoryCommand}"
                            CommandParameter="materials"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Item Grid -->
            <Border Grid.Row="3" Background="#1A1A1A" CornerRadius="4" Padding="4">
                <ItemsControl ItemsSource="{Binding DisplayedItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="38" Height="38" Margin="1"
                                    Background="#333" BorderBrush="#555" 
                                    BorderThickness="1" CornerRadius="2"
                                    ToolTip="{Binding Name}">
                                <Grid>
                                    <Image Source="{Binding IconPath}" 
                                           Width="32" Height="32"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            
            <!-- Navigation -->
            <Grid Grid.Row="4" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="â—€ Prev" Padding="12,6"
                        IsEnabled="{Binding CanGoPrevious}"
                        Command="{Binding PreviousPageCommand}"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding PageInfo}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#AAA"/>
                
                <Button Grid.Column="2" Content="Next â–¶" Padding="12,6"
                        IsEnabled="{Binding CanGoNext}"
                        Command="{Binding NextPageCommand}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
