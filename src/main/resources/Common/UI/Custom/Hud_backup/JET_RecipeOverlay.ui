Group #RecipeOverlay {
  Anchor: (Top: 10, Right: 10, Width: 220);
  LayoutMode: Top;
  Background: (Color: #1a1a1a(0.85));
  Padding: (Full: 10);

  Label #Title {
    Style: (FontSize: 14, TextColor: #ffaa00, RenderBold: true);
    Anchor: (Bottom: 8);
  }

  Group #OutputRow {
    LayoutMode: Left;
    Anchor: (Bottom: 8);

    ItemIcon #OutputIcon {
      Anchor: (Width: 32, Height: 32, Right: 8);
      Visible: true;
    }

    Label #OutputName {
      Style: (FontSize: 12, TextColor: #88ff88, VerticalAlignment: Center);
      FlexWeight: 1;
    }
  }

  Group #Divider {
    Anchor: (Height: 1, Bottom: 8);
    Background: (Color: #444444);
  }

  Label #MaterialsLabel {
    Text: "Materials:";
    Style: (FontSize: 11, TextColor: #aaaaaa);
    Anchor: (Bottom: 4);
  }

  Group #Materials {
    LayoutMode: Top;
  }

  Group #BenchRow {
    LayoutMode: Left;
    Anchor: (Top: 6);
    Visible: false;

    Label #BenchName {
      Style: (FontSize: 10, TextColor: #ffaa00);
    }
  }
}
