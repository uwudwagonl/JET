$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 600, Height: 420);

    #Title {
      Group {
        $C.@Title {
          @Text = "JET Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 20);

      Group #Settings {
        LayoutMode: Top;
        Padding: (Top: 10);

        Group #BindAltKeySetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 30);

          $C.@CheckBoxWithLabel #BindAltKeyCheck {
            @Text = "Bind Alt (Walk) key to open JET";
          }
        }

        Group #GiveButtonsSetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 30);

          $C.@CheckBoxWithLabel #GiveButtonsCheck {
            @Text = "Enable Give Item buttons (Creative/OP)";
          }
        }

        Group #DisableJetCommandSetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 30);

          $C.@CheckBoxWithLabel #DisableJetCommandCheck {
            @Text = "Disable /jet command (Pex Glyph only) [OP]";
          }
        }

        Group #BackgroundSetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 35);

          Label {
            Text: "Background Image:";
            Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center);
            Padding: (Right: 10);
          }

          $C.@DropdownBox #BackgroundDropdown {
            Anchor: (Width: 200, Height: 28);
          }
        }

        Group #OpacitySetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 35);

          Label {
            Text: "Background Opacity:";
            Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center);
            Padding: (Right: 10);
          }

          $C.@DropdownBox #OpacityDropdown {
            Anchor: (Width: 100, Height: 28);
          }
        }

        Group #BackgroundPreview {
          LayoutMode: Left;
          Padding: (Bottom: 10);
          Anchor: (Height: 60);

          Label {
            Text: "Preview:";
            Style: (FontSize: 12, TextColor: #888888);
            Padding: (Right: 10);
          }

          Group #PreviewContainer {
            Anchor: (Width: 100, Height: 50);
            Background: (Color: #1a1a1a);

            ItemIcon #PreviewImage {
              Anchor: (Full: 0);
              Visible: false;
            }
          }
        }
      }

      Label #HintLabel {
        Text: "Settings are saved automatically. Press Escape to close.";
        Style: (
          FontSize: 11,
          TextColor: #888888,
          HorizontalAlignment: Center
        );
        Padding: (Top: 20);
      }
    }
  }
}
