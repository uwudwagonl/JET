$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 600, Height: 300);

    #Title {
      Group {
        $C.@Title {
          @Text = "JET Settings";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 20);

      Group #Settings {
        LayoutMode: Top;
        Padding: (Top: 10);

        Group #BindAltKeySetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 30);

          $C.@CheckBoxWithLabel #BindAltKeyCheck {
            @Text = "Bind Alt (Walk) key to open JET";
          }
        }

        Group #GiveButtonsSetting {
          LayoutMode: Left;
          Padding: (Bottom: 15);
          Anchor: (Height: 30);

          $C.@CheckBoxWithLabel #GiveButtonsCheck {
            @Text = "Enable Give Item buttons (Creative/OP)";
          }
        }
      }

      Label #HintLabel {
        Text: "Settings are saved automatically. Press Escape to close.";
        Style: (
          FontSize: 11,
          TextColor: #888888,
          HorizontalAlignment: Center
        );
        Padding: (Top: 20);
      }
    }
  }
}
