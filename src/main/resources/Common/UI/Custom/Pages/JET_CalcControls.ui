Group #CalcControls {
  LayoutMode: Left;
  Padding: (Bottom: 8, Top: 4);

  Group { FlexWeight: 1; }

  Button #CalcMinus10 {
    Anchor: (Width: 36, Height: 28);
    Background: (Color: #3a1a1a(0.9));
    Style: (
      Hovered: (Background: #5a2a2a(0.9)),
      Pressed: (Background: #7a3a3a(0.9))
    );
    LayoutMode: Middle;
    Label {
      Text: "-10";
      Style: (FontSize: 11, TextColor: #ff9999, HorizontalAlignment: Center, VerticalAlignment: Center);
    }
  }

  Button #CalcMinus {
    Anchor: (Width: 34, Height: 34);
    Padding: (Left: 6);
    Background: (Color: #3a1a1a(0.9));
    Style: (
      Hovered: (Background: #5a2a2a(0.9)),
      Pressed: (Background: #7a3a3a(0.9))
    );
    LayoutMode: Middle;
    ItemIcon #CalcMinusIcon {
      Anchor: (Width: 28, Height: 28);
      Visible: true;
    }
  }

  Label #CalcQtyLabel {
    Anchor: (Width: 60, Height: 34);
    Padding: (Left: 6, Right: 6);
    Style: (
      FontSize: 14,
      RenderBold: true,
      TextColor: #ffcc66,
      HorizontalAlignment: Center,
      VerticalAlignment: Center
    );
  }

  Button #CalcPlus {
    Anchor: (Width: 34, Height: 34);
    Padding: (Right: 6);
    Background: (Color: #1a3a1a(0.9));
    Style: (
      Hovered: (Background: #2a5a2a(0.9)),
      Pressed: (Background: #3a7a3a(0.9))
    );
    LayoutMode: Middle;
    ItemIcon #CalcPlusIcon {
      Anchor: (Width: 28, Height: 28);
      Visible: true;
    }
  }

  Button #CalcPlus10 {
    Anchor: (Width: 36, Height: 28);
    Background: (Color: #1a3a1a(0.9));
    Style: (
      Hovered: (Background: #2a5a2a(0.9)),
      Pressed: (Background: #3a7a3a(0.9))
    );
    LayoutMode: Middle;
    Label {
      Text: "+10";
      Style: (FontSize: 11, TextColor: #99ff99, HorizontalAlignment: Center, VerticalAlignment: Center);
    }
  }

  Group { FlexWeight: 1; }
}
