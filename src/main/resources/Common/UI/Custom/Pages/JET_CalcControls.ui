Group #CalcControls {
  LayoutMode: Left;
  Padding: (Bottom: 8, Top: 6);

  Group { FlexWeight: 1; }

  Group #CalcBar {
    LayoutMode: Left;
    Background: (Color: #0d0d0d(0.85));

    Button #CalcMinus10 {
      Anchor: (Width: 44, Height: 32);
      Background: (Color: #00000000);
      Style: (
        Hovered: (Background: #cc333318),
        Pressed: (Background: #cc333335)
      );
      LayoutMode: Middle;
      Label {
        Text: "-10";
        Style: (FontSize: 11, TextColor: #bb5555, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    Button #CalcMinus {
      Anchor: (Width: 38, Height: 32);
      Background: (Color: #1f0a0a(0.95));
      Style: (
        Hovered: (Background: #3a1515(0.95)),
        Pressed: (Background: #552020(0.95))
      );
      LayoutMode: Middle;
      Label {
        Text: "-";
        Style: (FontSize: 17, TextColor: #ff7777, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    Label #CalcQtyLabel {
      Anchor: (Width: 60, Height: 32);
      Style: (
        FontSize: 15,
        RenderBold: true,
        TextColor: #ffcc66,
        HorizontalAlignment: Center,
        VerticalAlignment: Center
      );
    }

    Button #CalcPlus {
      Anchor: (Width: 38, Height: 32);
      Background: (Color: #0a1f0a(0.95));
      Style: (
        Hovered: (Background: #153a15(0.95)),
        Pressed: (Background: #205520(0.95))
      );
      LayoutMode: Middle;
      Label {
        Text: "+";
        Style: (FontSize: 17, TextColor: #77ff77, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    Button #CalcPlus10 {
      Anchor: (Width: 44, Height: 32);
      Background: (Color: #00000000);
      Style: (
        Hovered: (Background: #33cc3318),
        Pressed: (Background: #33cc3335)
      );
      LayoutMode: Middle;
      Label {
        Text: "+10";
        Style: (FontSize: 11, TextColor: #55bb55, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }
  }

  Group { FlexWeight: 1; }
}
