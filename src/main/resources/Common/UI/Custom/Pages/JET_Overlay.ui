// JET Overlay - Right-side item browser for inventory screens
// Positioned on the right side of the screen, not fullscreen

$C = "../Common.ui";

// Main overlay container - anchored to right side
Group #JETOverlay {
  LayoutMode: Top;
  Anchor: (
    Width: 340,
    Right: 0,
    Top: 0,
    Bottom: 0
  );
  Padding: (Right: 10, Top: 60, Bottom: 60);

  // Semi-transparent background panel
  Group #OverlayPanel {
    LayoutMode: Top;
    Background: #1a1a1a(0.92);
    Padding: (Full: 8);

    // Header with title
    Group #Header {
      LayoutMode: Left;
      Anchor: (Height: 30);
      Padding: (Bottom: 6);

      Label #Title {
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #f0a030
        );
        Text: "JET";
        Padding: (Right: 8);
      }

      Label #ItemCount {
        Style: (
          FontSize: 11,
          TextColor: #888888
        );
        FlexWeight: 1;
      }
    }

    // Search bar - use HeaderSearch from Common.ui
    Group #SearchBar {
      Anchor: (Height: 32);
      Padding: (Bottom: 8);
      $C.@HeaderSearch {}
    }

    // Item grid container with scrolling
    Group #ItemGridContainer {
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Background: #202020(0.5);
      Padding: (Full: 4);

      Group #ItemGrid {
        LayoutMode: Top;
      }
    }

    // Pagination controls
    Group #Pagination {
      LayoutMode: Left;
      Anchor: (Height: 32);
      Padding: (Top: 6);

      TextButton #PrevPage {
        Anchor: (Width: 50, Height: 26);
        Text: "<";
        Style: TextButtonStyle(
          Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff)),
          Hovered: (Background: #3a3a3a(0.9)),
          Pressed: (Background: #4a4a4a),
          Sounds: $C.@ButtonSounds
        );
        Background: #2a2a2a(0.8);
      }

      Label #PageInfo {
        FlexWeight: 1;
        Style: (
          FontSize: 12,
          TextColor: #aaaaaa,
          HorizontalAlignment: Center
        );
        Text: "1/1";
      }

      TextButton #NextPage {
        Anchor: (Width: 50, Height: 26);
        Text: ">";
        Style: TextButtonStyle(
          Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff)),
          Hovered: (Background: #3a3a3a(0.9)),
          Pressed: (Background: #4a4a4a),
          Sounds: $C.@ButtonSounds
        );
        Background: #2a2a2a(0.8);
      }
    }

    // Hint text
    Label #HintText {
      Style: (
        FontSize: 9,
        TextColor: #555555,
        HorizontalAlignment: Center
      );
      Text: "Click item for recipes";
      Padding: (Top: 4);
    }
  }
}
