$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1120, Height: 700);

    #Title {
      Group {
        $C.@Title {
          @Text = "Just Enough Tales";
        }
        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ItemSection {
        FlexWeight: 2;
        LayoutMode: Top;
        Padding: (Left: 10, Right: 5);

        Group #ItemCardContainer {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemCards {
            LayoutMode: Top;
          }
        }
      }

      Group #RecipePanel {
        FlexWeight: 1;
        LayoutMode: Top;
        Padding: (Left: 5);
        Visible: false;

        Group #SelectedItemBar {
          LayoutMode: Top;
          Padding: (Full: 10, Bottom: 5);
          Background: (Color: #1a1a1a(0.6));

          Group #ItemHeader {
            LayoutMode: Left;

            Group {
              LayoutMode: Left;
              FlexWeight: 1;

              ItemIcon #SelectedIcon {
                Anchor: (Width: 48, Height: 48);
                Visible: true;
              }

              Group {
                LayoutMode: Top;
                Padding: (Left: 10);

                Label #SelectedName {
                  Style: (
                    FontSize: 18,
                    RenderBold: true,
                    TextColor: #ffffff
                  );
                }

                Label #RecipeInfo {
                  Style: (
                    FontSize: 12,
                    TextColor: #888888
                  );
                }
              }
            }

            TextButton #PinButton {
              Anchor: (Width: 90, Height: 40);
              Text: "Pin";
              Style: TextButtonStyle(
                Default: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
                Hovered: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
                Pressed: (LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
                Sounds: $C.@ButtonSounds
              );
              Background: #2a2a2a(0.6);
              Padding: (Full: 8);
            }
          }
        }

        Group #SectionButtons {
          LayoutMode: Left;
          Padding: (Top: 10, Bottom: 5);
          Anchor: (Height: 50);

          TextButton #ToggleModeButton {
            Anchor: (Width: 180, Height: 40);
            Text: "How to Craft";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
              Pressed: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
          }

          Group {
            Anchor: (Width: 10);
          }

          TextButton #UsesButton {
            Anchor: (Width: 180, Height: 40);
            Text: "Used In";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.8)),
              Pressed: (LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: false, HorizontalAlignment: Center, VerticalAlignment: Center), Background: #3a3a3a(0.9)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
          }
        }

        Group #RecipeListContainer {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #RecipeList {
            LayoutMode: Top;
          }
        }

        Group #RecipePagination {
          LayoutMode: Left;
          Padding: (Top: 10, Bottom: 15);
          Anchor: (Height: 50);

          TextButton #PrevRecipe {
            Anchor: (Width: 70, Height: 35);
            Text: "Prev";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
              Hovered: (Background: #3a3a3a(0.9)),
              Pressed: (Background: #4a4a4a(1.0)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
          }

          Label #PageInfo {
            FlexWeight: 1;
            Style: (
              FontSize: 14,
              TextColor: #ffffff,
              HorizontalAlignment: Center,
              VerticalAlignment: Center
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
            Anchor: (Left: 10, Right: 10);
          }

          TextButton #NextRecipe {
            Anchor: (Width: 70, Height: 35);
            Text: "Next";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true)),
              Hovered: (Background: #3a3a3a(0.9)),
              Pressed: (Background: #4a4a4a(1.0)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.6);
            Padding: (Full: 8);
          }
        }
      }
    }
  }
}
