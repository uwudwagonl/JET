$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1100, Height: 650);

    #Title {
      Group {
        $C.@Title {
          @Text = "Just Enough Tales";
        }
        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ItemSection {
        FlexWeight: 2;
        LayoutMode: Top;
        Padding: (Left: 10);

        Group #ItemCardContainer {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ItemCards {
            LayoutMode: Top;
          }
        }
      }

      Group #RecipePanel {
        FlexWeight: 1;
        LayoutMode: Top;
        Padding: (Left: 15);
        Visible: false;

        Group #SelectedItemBar {
          LayoutMode: Left;
          Padding: (Full: 8, Bottom: 12);
          Background: (Color: #252525(0.95));

          ItemIcon #SelectedIcon {
            Anchor: (Width: 40, Height: 40);
            Visible: true;
          }

          Label #SelectedName {
            Style: (
              FontSize: 16,
              RenderBold: true,
              TextColor: #ffffff
            );
            Padding: (Left: 10);
            FlexWeight: 1;
          }
        }

        Group #ModeToggle {
          LayoutMode: Left;
          Padding: (Top: 6, Bottom: 6);
          Anchor: (Height: 35);

          TextButton #ToggleModeButton {
            Anchor: (Width: 200, Height: 28);
            Text: "Toggle: Craft â†” Uses";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 11, TextColor: #ffffff)),
              Hovered: (Background: #3a3a3a(0.8)),
              Pressed: (Background: #4a4a4a(0.9)),
              Sounds: $C.@ButtonSounds
            );
            Background: #2a2a2a(0.7);
            Padding: (Full: 4);
          }

          Label {
            Style: (
              FontSize: 10,
              TextColor: #666666
            );
            Text: "Switch between crafting and usage recipes";
            Padding: (Left: 10);
            FlexWeight: 1;
          }
        }

        Label #RecipeInfo {
          Style: (
            FontSize: 14,
            TextColor: #cccccc
          );
          Padding: (Top: 6, Bottom: 6);
        }

        Group #RecipeListContainer {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #RecipeList {
            LayoutMode: Top;
          }
        }

        Group #RecipePagination {
          LayoutMode: Left;
          Padding: (Top: 10);
          Anchor: (Height: 40);

          TextButton #PrevRecipe {
            Anchor: (Width: 80, Height: 35);
            Text: "Prev";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 12, TextColor: #ffffff)),
              Hovered: (Background: #2a2a2a(0.8)),
              Pressed: (Background: #3a3a3a(0.9)),
              Sounds: $C.@ButtonSounds
            );
            Background: #1a1a1a(0.6);
            Padding: (Full: 6);
          }

          Label #PageInfo {
            FlexWeight: 1;
            Style: (
              FontSize: 12,
              TextColor: #888888,
              HorizontalAlignment: Center
            );
            Padding: (Full: 6);
          }

          TextButton #NextRecipe {
            Anchor: (Width: 80, Height: 35);
            Text: "Next";
            Style: TextButtonStyle(
              Default: (LabelStyle: (FontSize: 12, TextColor: #ffffff)),
              Hovered: (Background: #2a2a2a(0.8)),
              Pressed: (Background: #3a3a3a(0.9)),
              Sounds: $C.@ButtonSounds
            );
            Background: #1a1a1a(0.6);
            Padding: (Full: 6);
          }
        }
      }
    }
  }
}
