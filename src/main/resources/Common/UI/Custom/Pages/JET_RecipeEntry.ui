Group {
  LayoutMode: Top;
  Padding: (Full: 10, Bottom: 12);
  Background: (Color: #1e1e1e(0.9));
  Anchor: (Bottom: 8);

  Label #RecipeTitle {
    Style: (
      FontSize: 13,
      RenderBold: true,
      TextColor: #ffcc66
    );
    Padding: (Bottom: 4);
  }

  Label #BenchInfo {
    Style: (
      FontSize: 11,
      TextColor: #88aaff
    );
    Padding: (Bottom: 8);
    Visible: false;
  }

  Group {
    LayoutMode: Left;
    Padding: (Top: 4);

    ItemIcon #InputIcon {
        Anchor: (Width: 30, Height: 30);
        Visible: true;
    }

    Group #InputItems {
      LayoutMode: Left;
      FlexWeight: 1;
    }
  }

  Group {
    LayoutMode: Left;
    Padding: (Top: 6);

    ItemIcon #OutputIcon {
        Anchor: (Width: 30, Height: 30);
        Visible: true;
    }

    Group #OutputItems {
      LayoutMode: Left;
      FlexWeight: 1;
    }
  }
}
