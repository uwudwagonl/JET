Group {
  LayoutMode: Top;
  Padding: (Full: 10, Bottom: 12);
  Background: (Color: #1e1e1e(0.9));
  Anchor: (Bottom: 8);

  Label #RecipeTitle {
    Style: (
      FontSize: 13,
      RenderBold: true,
      TextColor: #ffcc66
    );
    Padding: (Bottom: 4);
  }

  Label #BenchInfo {
    Style: (
      FontSize: 11,
      TextColor: #88aaff
    );
    Padding: (Bottom: 8);
    Visible: false;
  }

  Group {
    LayoutMode: Left;
    Padding: (Top: 4);

    Label {
      Style: (
        FontSize: 11,
        TextColor: #ff8888
      );
      Text: "In:";
      Anchor: (Width: 30);
    }

    Group #InputItems {
      LayoutMode: Left;
      FlexWeight: 1;
    }
  }

  Group {
    LayoutMode: Left;
    Padding: (Top: 6);

    Label {
      Style: (
        FontSize: 11,
        TextColor: #88ff88
      );
      Text: "Out:";
      Anchor: (Width: 30);
    }

    Group #OutputItems {
      LayoutMode: Left;
      FlexWeight: 1;
    }
  }
}
