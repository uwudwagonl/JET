Group {
  Anchor: (Bottom: 0, Right: 0);
  LayoutMode: Top;

  Button #ItemButton {
    Anchor: (Width: 100, Bottom: 5, Right: 5);
    Padding: (Full: 8);
    Background: (Color: #1a1a1a(0.6));
    LayoutMode: Top;
    Style: (
      Hovered: (
        Background: #2a2a2a(0.8),
      ),
      Pressed: (
        Background: #3a3a3a(0.9),
      )
    );

    AssetImage #QualityBg {
      Anchor: (Width: 64, Height: 64, Bottom: 5);

      ItemIcon #ItemIcon {
        Anchor: (Full: 0);
        Visible: true;
      }
    }

    Label #ItemName {
      Style: (
        FontSize: 11,
        RenderBold: false,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Bottom: 2);
    }
  }
}
