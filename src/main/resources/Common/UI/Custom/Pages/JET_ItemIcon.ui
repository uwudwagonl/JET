Button {
  Anchor: (Width: 131, Bottom: 10, Right: 10);
  Padding: (Full: 12);
  Background: (Color: #1a1a1a(0.6));
  LayoutMode: Top;
  Style: (
    Hovered: (
      Background: #2a2a2a(0.8),
    ),
    Pressed: (
      Background: #3a3a3a(0.9),
    )
  );

  ItemIcon #ItemIcon {
    Anchor: (Width: 64, Height: 64, Bottom: 5);
    Visible: true;
  }

  Label #ItemName {
    Style: (
      FontSize: 14,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Bottom: 5);
  }

  Button #PinButton {
    Anchor: (Width: 24, Height: 24, Top: 2, Right: 2);
    Background: (Color: #000000(0.5));
    Padding: (Full: 4);
    Style: (
      Hovered: (
        Background: #ffd700(0.8),
      ),
      Pressed: (
        Background: #ffd700(1.0),
      )
    );

    Label #PinIcon {
      Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #ffffff
      );
    }
  }
}
